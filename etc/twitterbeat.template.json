{
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": true,
                "norms": {
                    "enabled": false
                }
            },
            "dynamic_templates": [
                {
                    "all": {
                        "mapping": {
                            "doc_values": true,
                            "ignore_above": 1024,
                            "index": "not_analyzed",
                            "type": "{dynamic_type}"
                        },
                        "match": "*"
                    }
                }
            ],
            "properties": {
                "@timestamp": {
                    "type": "date"
                },
                "tweet": {
                    "properties": {
                        "created_at": {
                            "type": "date",
                            "format": "E MMM dd HH:mm:ss Z yyyy"
                        },
                        "entities": {
                            "properties": {
                                "Hashtags": {
                                    "properties": {
                                        "Text": {
                                            "type": "string",
                                            "analyzer": "snowball_analyzer_en",
                                            "fields": {
                                                "raw": {
                                                    "type": "string",
                                                    "index": "not_analyzed"
                                                }
                                            }
                                        }
                                    }
                                },
                                "User_mentions": {
                                    "properties": {
                                        "Name": {
                                            "type": "string",
                                            "analyzer": "snowball_analyzer_en",
                                            "fields": {
                                                "raw": {
                                                    "type": "string",
                                                    "index": "not_analyzed"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "text": {
                            "type": "string",
                            "analyzer": "snowball_analyzer_en",
                            "fields": {
                                "raw": {
                                    "type": "string",
                                    "index": "not_analyzed"
                                }
                            }
                        },
                        "user": {
                            "type": "object",
                            "enabled": false
                        }
                    }
                }
            }
        }
    },
    "settings": {
        "index.refresh_interval": "15s",
        "analysis": {
            "analyzer": {
                "snowball_analyzer_en": {
                    "type": "snowball",
                    "language": "English"
                }
            }
        }
    },
    "template": "twitterbeat-*"
}
